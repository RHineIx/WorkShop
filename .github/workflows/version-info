name: Generate Version Info

on:
  push:
    branches:
      - main
      - PWA

# NEW: Grant write permissions to the workflow
permissions:
  contents: write

jobs:
  build:
    runs-on: ubuntu-latest
    steps:
      - name: Checkout code
        uses: actions/checkout@v4

      - name: Create version.json
        run: |
          echo "{" > version.json
          echo "  \"hash\": \"$(git rev-parse --short HEAD)\"," >> version.json
          echo "  \"branch\": \"${{ github.ref_name }}\"" >> version.json
          echo "}" >> version.json

      - name: Commit and push version.json
        run: |
          git config --global user.name 'github-actions[bot]'
          git config --global user.email 'github-actions[bot]@users.noreply.github.com'
          git add version.json
          # Commit only if there are changes
          if ! git diff --staged --quiet; then
            git commit -m "ci: Update version.json [skip ci]"
            git push
          else
            echo "No changes to version.json"
          fi
